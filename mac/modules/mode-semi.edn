         [:a :!R2 ["semi_mode" 1]] ;; @
         [:s :!R7 ["semi_mode" 1]] ;; &
         [:d :!Rbackslash ["semi_mode" 1]] ;; |
         [:f :!R1 ["semi_mode" 1]] ;; !
