 :rules [[:semicolon ["semi_mode" 1] nil {:afterup ["semi_mode" 0]
                                          :alone :semicolon}]
         [:q :escape ["semi_mode" 1]] ;; esc
         [:w :!Ropen_bracket ["semi_mode" 1]] ;; {
         [:e :!R9 ["semi_mode" 1]] ;; (
